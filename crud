CREATE TABLE cat(
    cat_id int not null AUTO_INCREMENT,
    name varchar(100),
    breed varchar(100),
    age int,
    PRIMARY key(cat_id)
);

CREATE DATABASE helloWorld;

drop DATABASE helloWorld;
USE helloWorld;

