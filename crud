select name , age from cat;

select*from cat WHERE age =15;

select name , age from cat where age = 15;

select name , age from cat where name = 'asad';
select name , age from cat where age >=7;
select name , age from cat where age >=15;

select name , age from cat where breed = 'labra';
select name , breed from cat;

select name , breed from cat  where cat_id=age;

#alias
select name as 'cat name',breed as 'kitty breed' from cat  ;

#update 
update cat set breed = 'tabby' where breed = 'labra';

update cat set name = 'chutiya' where name = 'asad'; 

update cat set age = 9 where name = 'ringo';

